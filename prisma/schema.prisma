generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tutor {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String
  passwordHash String
  phone        String
  createdAt    DateTime  @default(now())
  students     Student[]
  
  @@map("tutors")
}

model Student {
  id                      String   @id @default(uuid())
  email                   String   @unique
  name                    String
  passwordHash            String?  // NULL si tiene tutor, solo para mayores independientes
  semester                String
  state                   String
  birthdate               String?  // Solo para menores
  relationship            String?  // Relaci√≥n con el tutor (solo menores)
  createdAt               DateTime @default(now())
  hasCompletedEvaluation  Boolean  @default(false)
  tutorId                 String?  // NULL si es mayor independiente
  tutor                   Tutor?   @relation(fields: [tutorId], references: [id])
  
  @@map("students")
}